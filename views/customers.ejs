<%- include('partials/navbar'); %>


    <div id="items" class="my-5 mx-4">
        <h2>Customers</h2>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Account Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Balance</th>
                    <th scope="col">Transaction</th>
                </tr>
                <% customerList.forEach(customer =>{ %>
                    <tr class="customer-item">
                        <th scope="row"><%= customer.accountNumber %></th>
                        <td><%= customer.name %></td>
                        <td><%= customer.amount %></td>
                        <td><a href="transaction"><button type="button" class="btn btn-primary">Transact</button></a></td>
                    </tr>
                <% }) %>
                
                
            </thead>
        </table>
        
        <p class="text-center my-5">Want to add a new customer ? <a href="addCustomer"> Click Here</a></p>
    </div>


    <%- include('partials/footer'); %>